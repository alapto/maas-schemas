{
  "$id": "http://maasglobal.com/core/paymentSource.json",
  "description": "MaaS region schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "identityId": {
      "$ref": "components/units.json#/definitions/identityId"
    },
    "type": {
      "type": "string",
      "enum": ["card", "paypal_express_checkout", "amazon_payments", "direct_debit", "generic", "alipay", "unionpay", "apple_pay", "google_pay"]
    },
    "gatewayName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "gatewayId": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "temporaryToken": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "status": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "valid": {
      "type": "boolean"
    },
    "card": {
      "$ref": "card.json"
    }
  },
  "required": [ "identityId", "type" ],
  "additionalProperties": false
}
